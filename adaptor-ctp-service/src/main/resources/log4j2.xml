<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration status="${sys:log4j2.level}">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MMdd HH:mm:ss.SSS} %-5level [%t] [%C{1}.%M] %msg%n" />
		</Console>
		<RollingFile name="RollingFile"
			fileName="${sys:user.home}/logs/${sys:log4j2.filename}.log"
			filePattern="${sys:user.home}/logs/${sys:log4j2.filename}.%d{yyyyMMdd}.log"
			append="true">
			<!-- 日志输出格式 -->
			<PatternLayout
				pattern="%d{yyyy-MMdd HH:mm:ss.SSS} %-5level [%t] [%C{1}.%M] %msg%n" />
			<!-- 设置日志文件分割策略 -->
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="127MB" />
			</Policies>
		</RollingFile>
	</appenders>
	<loggers>
		<root level="${sys:log4j2.level}">
			<appender-ref ref="Console"></appender-ref>
			<appender-ref ref="RollingFile"></appender-ref>
		</root>
	</loggers>
</configuration>